@model JournalApp.Models.Article

@{
	ViewData["Title"] = "Modifier un article";
}

<div class="container mt-4">
	<h1>@ViewData["Title"]</h1>

	<form asp-action="Edit" class="needs-validation" novalidate>
		<div class="form-group">
			<label asp-for="Titre" class="control-label"></label>
			<input asp-for="Titre" class="form-control" />
			<span asp-validation-for="Titre" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Contenu" class="control-label"></label>
			<input asp-for="Contenu" class="form-control" />
			<span asp-validation-for="Contenu" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="DatePublication" class="control-label"></label>
			<input asp-for="DatePublication" class="form-control" />
			<span asp-validation-for="DatePublication" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Auteur" class="control-label"></label>
			<input asp-for="Auteur" class="form-control" />
			<span asp-validation-for="Auteur" class="text-danger"></span>
		</div>
		<div class="form-group">
			<input type="Submit" value="Save" class="btn btn-primary" />
			<cache asp-action="Index" class="btn btn-secondary">Back to List</cache>
		</div>
	</form>

</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

