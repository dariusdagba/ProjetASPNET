@model IEnumerable<JournalApp.Models.Article>


@{
	ViewData["Title"] = "Listes des articles";
}

<div class="container mt-4">
	<h1>@ViewData["Title"]</h1>

	<p>
		<a asp-action="Create" class="btn btn-primary">Ajouter un article</a>
	</p>

	<table class="table table-stripped">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(model => model.Titre)</th>
				<th>@Html.DisplayNameFor(model => model.Contenu)</th>
				<th>@Html.DisplayNameFor(model => model.DatePublication)</th>
				<th>@Html.DisplayNameFor(model => model.Auteur)</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.Titre)</td>
					<td>@Html.DisplayFor(modelItem => item.Contenu)</td>
					<td>@Html.DisplayFor(modelItem => item.DatePublication)</td>
					<td>@Html.DisplayFor(modelItem => item.Auteur)</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
						<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>

