@model Journalapp.Models.Article

@{
	ViewData["Title"] = "Delete";
}
<div class="container mt-4">
	<h1>@ViewData["Title"]</h1>

	<div class="card">
		<div class="card-body">
			<h5 class="card-title">Are you sure you want to delete this?</h5>
			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Titre)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Titre)
				</dd>
				dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Contenu)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Contenu)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.DatePublication)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.DatePublication)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Auteur)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Auteur)
				</dd>
			</dl>

			<form asp-action="Delete">
				<input type="hidden" asp-for="Id" />
				<div class="form-group">
					<input type="submit" value="Delete" class="btn btn-danger" />
					<a asp-action="Index" class="btn btn-secondary">Back to List</a>
				</div>
			</form>
		</div>
	</div>
</div>


